{
  "env": {
    "node": true,
    "es6": true,
    "commonjs": true,
    "browser": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": ["error", { "argsIgnorePattern": "req|res|next|val" }],
    "react/jsx-uses-react": "none",
    "react/jsx-uses-vars": "warn"
  },
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "plugins": ["react"]
}
